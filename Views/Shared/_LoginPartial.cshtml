@using Microsoft.AspNetCore.Identity
@using SistemaEgresosIngresos.Models.Entities

@inject SignInManager<AppUsuario> SignInManager
@inject UserManager<AppUsuario> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
            <li class="nav-item">
                <a>Hola @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item dropdown pe-3">
                <ul>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Salir</button>
                    </form>
                </ul>
            </li><!-- End Profile Nav -->

        </ul>
    </nav>
}
</ul>
