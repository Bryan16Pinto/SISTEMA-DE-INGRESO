@model SistemaEgresosIngresos.Models.Entities.Cliente

@{
    ViewData["Title"] = "Create";
}

<div class="section">
    <div class="row justify-content-center">
        <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center" style="font-size: 28px">Nuevo Cliente</h1>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TipoCliente" class="control-label">Tipo de Cliente</label>
@*                            @Html.DropDownList("TipoCliente", (IEnumerable<SelectListItem>)ViewBag.TipoPersonas, new { @class = "form-control" })*@
                            <select asp-for="TipoCliente" asp-items="@ViewBag.TipoPersonas" required class="form-select"></select>
                        <span asp-validation-for="TipoCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumeroDocumento" class="control-label">Número de Documento</label>
                        <input asp-for="NumeroDocumento" class="form-control" />
                        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombres</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label">Correo Electrónico</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Volver</a>
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
